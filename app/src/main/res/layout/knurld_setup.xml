<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Enrollment"
        android:id="@+id/setEnrollment"
        android:onClick="setKnurldEnrollment"
        android:layout_marginBottom="51dp"
        android:layout_above="@+id/recordEnrollment"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish Enrollment"
        android:id="@+id/updateEnrollment"
        android:onClick="updateKnurldEnrollment"
        android:nestedScrollingEnabled="false"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/recordEnrollment"
        android:layout_alignLeft="@+id/recordEnrollment"
        android:layout_alignStart="@+id/recordEnrollment" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record Enrollment"
        android:id="@+id/recordEnrollment"
        android:onClick="recordEnrollment"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enrollmentDirections"
        android:layout_above="@+id/recordEnrollment"
        android:layout_centerHorizontal="true"
        android:text="Tap here to record your enrollment phrases" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap here to start the enrollment process"
        android:id="@+id/textView"
        android:layout_above="@+id/setEnrollment"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap here to finish the enrollment process"
        android:id="@+id/textView2"
        android:layout_below="@+id/recordEnrollment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

</RelativeLayout>
